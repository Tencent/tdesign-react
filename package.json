    "@types/testing-library__jest-dom": "^5.14.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.4.5",
    "babel-polyfill": "^6.26.0",
    "camelcase": "^6.2.1",
    "chalk": "^4.1.0",
    "cross-env": "^5.2.1",
    "cssnano": "^4.0.1",
    "cypress": "^10.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dom-parser": "^0.1.6",
    "esbuild": "^0.14.9",
    "eslint": "^7.32.0",
